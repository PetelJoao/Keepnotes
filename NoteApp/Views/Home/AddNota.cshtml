@using System.Text.Json;
@{

    ViewData["Title"] = "Privacy Policy";

    string caminho = "wwwroot/Data/Notasbd.txt";
    if (ViewData["TituloNota"] != null && ViewData["DescricaoNota"]!= null)
    {
        using (StreamWriter escritor = new StreamWriter(caminho, true))
        {
            escritor.WriteLine($"{ViewData["TituloNota"].ToString()}. {ViewData["DescricaoNota"].ToString()}");
        }
    }

}



<div class="margin-left" style="height:20px" > </div>
<div class="margin-center container mt-5 h-100   w-100 ">
   
    <div class=" rounded shadow p-5 h-100 w-50 m-auto border-light bg-light">
        <h2 class="text-center text-dark">Adicionar as minhas notas</h2>
        <form method="post" >
            <div class="form-group">
                <label for="noteTitle" class="  text-dark">Título da Nota</label>
                <input type="text" name="Nota" class="form-control text-dark" id="noteTitle" placeholder="Digite o título da nota" required>
            </div>
            <div class="form-group">
                <label for="noteDescription" class=" text-light">Descrição</label>
                <textarea class="form-control text-dark" name="NotaDesc" id="noteDescription" rows="3" placeholder="Digite a descrição da nota" required></textarea>
            </div>
            <button type="submit" value="submit"  id="NotaAdd" class="btn btn-primary ">Adicionar Nota</button>
        </form>

    </div>

</div>


