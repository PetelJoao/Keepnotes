<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoteApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NoteApp.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .sidebar 
        {
            width: 200px;
            height: 100vh;
            background-color: rgb(50, 50, 50);
            position: fixed;
            left: 0;
            transition: left 0.3s ease;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
       
        }

            .sidebar.active {
              
                left: -190px;
            }

        .sidebar-button {
            background-color: #ff4c81;
            color: white;
            border: none;
            padding: 10px;
            margin: 10px 0;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .sidebar-button:hover {
                background-color: #ff2e5d;
            }

        .hamburger-button {
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
            align-self: flex-end;
            margin-bottom: 20px;
        }
    </style>
</head>
<body >

    <div class="sidebar bg-light " id="sidebar" onclick="Sidebarexpansivel()">
        <button class="hamburger-button">
            &#9776;
            <span class="fs-4 d-none d-sm-inline  text-dark"> KeepNotes </span>
        </button>
        

        <ul class="navbar-nav p-1 flex-grow-1">

            <li class="nav-item">
                <a class="nav-link btn btn-lg text-white bg-danger text-center sidebar-button" asp-area="" asp-controller="Home" asp-action="Index">NOTAS</a>
            </li>
            <br />

            <li class="nav-item">
                <a class="nav-link btn btn-lg text-white bg-danger text-center sidebar-button" asp-area="" asp-controller="Home" asp-action="AddNota">TIRAR NOTAS</a>
            </li>
            <br />
            <li class="nav-item">
                <a class="nav-link btn btn-lg text-white bg-danger text-center sidebar-button" asp-area="" asp-controller="Home" asp-action="ExcluirNota">Excluir Nota</a>
            </li>
            <br />
            <li class="nav-item">
                <a id="excNotas" class="nav-link btn btn-lg text-white bg-danger text-center sidebar-button" asp-area="" asp-controller="Home" asp-action="NotasEscluidas">Notas excluidas</a>
            </li>
        </ul>
    </div>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      

        function Sidebarexpansivel() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('active');
        }
      
    </script>




    <script src="~/js/site.js" asp-append-version="true">
    </script>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
